generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  walletAddress String?  @unique
  balanceUSDT   Float    @default(1000)
  balanceWICK   Float    @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  skins         Skin[]
  transactions  Transaction[]
}

model Skin {
  id              String  @id @default(uuid())
  userId          String
  type            String  @default("PROTOCOL_DROID")
  level           Int     @default(0)
  integrity       Float   @default(100)
  maxIntegrity    Float   @default(100)
  isBurned        Boolean @default(false)
  totalInvestment Float   @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User    @relation(fields: [userId], references: [id])
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  type      String   // BET, WIN, REPAIR, REFUND
  amount    Float
  currency  String   // USDT, WICK
  timestamp DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
